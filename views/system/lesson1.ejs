<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>חנק מגוף זר</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/cours/lisson.css">
</head>
<body dir="rtl">
    <div class="videoControls">
        <h1 class="Title">חנק מגוף זר</h1>
        <div>
            <span class="material-symbols-outlined videoButton" id="videoButton">play_circle</span>
        </div>

    </div>
    <div class="video">
        <video src="/css/videos/video1.mp4" id="video" style="height: 100%; width: 100%; background-color: white;" autoplay>
        </video>
    </div>
    <div class="controls">
        <button class="Button" id="continue" disabled onclick="location.href='/cours/quiz1'">המשך</button>
        <button class="Button"  id="back" disabled>חזור</button>
    </div>
    <script>
        const video = document.getElementById('video')
        document.querySelector('#videoButton').addEventListener('click', () => {
            if(document.querySelector('#videoButton').innerHTML === "play_circle") {
                video.play();
                document.querySelector('#videoButton').innerHTML = "pause_circle";
            } else {
                video.pause();
                document.querySelector('#videoButton').innerHTML = "play_circle";
            }
        })
        document.addEventListener('DOMContentLoaded', function() {
            function checkVideoEnded() {
                if (video.currentTime >= 468) {
                    document.querySelector('#continue').disabled = false;
                    document.querySelector('#back').disabled = false;
                }
            }

            document.getElementById('video').addEventListener('timeupdate', checkVideoEnded);
        });
        document.querySelector('#back').addEventListener('click', () => {
                video.currentTime = 0;
        })
        document.addEventListener('DOMContentLoaded', function() {
            function checkVideoState() {
                if (video.paused) {
                    document.querySelector('#videoButton').innerHTML = "play_circle";
                } else {
                    document.querySelector('#videoButton').innerHTML = "pause_circle";
                }
            }

            video.addEventListener('play', checkVideoState);
            video.addEventListener('pause', checkVideoState);

            video.addEventListener('loadeddata', checkVideoState);
        });
    </script>
</body>
</html>